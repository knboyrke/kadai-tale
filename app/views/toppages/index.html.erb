<h1>おはなし一覧</h1>

<% if @tales.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>作者</th>
      </tr>
    </thead>
    <tbody>
      <% @tales.each do |tale| %>
        <tr>
          <td><%= link_to tale.id, tale %></td>
          <td><%= tale.title %></td>
          <td><%= tale.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>