<% if current_user.favorite?(tale) %>
  <%= form_with(model: current_user.favorites.find_by(tale_id: tale.id), method: :delete) do |f| %>
    <%= hidden_field_tag :tale_id, tale.id %>
    <%= f.submit '解除する', class: 'btn btn-warning btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :tale_id, tale.id %>
    <%= f.submit 'お気に入り', class: 'btn btn-info btn-sm' %>
  <% end %>
<% end %>